<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:padding="@dimen/space_24">

    <!-- Card để căn giữa nội dung, bo góc, có viền nhẹ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/theNoiDung"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/radius_16"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/colorOutline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_24">

            <ImageView
                android:id="@+id/anhLogo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvChaoMung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_title"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/anhLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/space_16"/>

            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Đăng nhập hoặc tạo tài khoản mới"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/text_body"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvChaoMung"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/space_8"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nutDangNhap"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="@dimen/text_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMoTa"
                android:layout_marginTop="@dimen/space_24"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nutTaoTaiKhoan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản"
                android:textAllCaps="false"
                android:textSize="@dimen/text_button"
                app:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nutDangNhap"
                android:layout_marginTop="@dimen/space_12"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_welcome"
    android:padding="@dimen/sp_24"
    tools:context=".MainActivity">

    <!-- Khối nội dung trung tâm (card) -->
    <LinearLayout
        android:id="@+id/khoi_noi_dung_chinh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_card_welcome"
        android:orientation="vertical"
        android:padding="@dimen/sp_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo ứng dụng (có thể thay bằng ảnh riêng) -->
        <ImageView
            android:id="@+id/img_logo_ung_dung"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_icon"
            android:contentDescription="Logo ứng dụng" />

        <!-- Tiêu đề lớn: chữ đậm, dễ đọc -->
        <TextView
            android:id="@+id/tv_tieu_de_chao_mung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_16"
            android:text="Chào mừng bạn!"
            android:textColor="@color/cl_text_primary"
            android:textStyle="bold"
            android:textSize="@dimen/fs_title"
            android:gravity="center"/>

        <!-- Mô tả ngắn gọn -->
        <TextView
            android:id="@+id/tv_mo_ta_ngan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_8"
            android:text="Hãy đăng nhập hoặc tạo tài khoản mới."
            android:textColor="@color/cl_text_secondary"
            android:textSize="@dimen/fs_body"
            android:gravity="center"/>

        <!-- Ô nhập tên đăng nhập -->
        <EditText
            android:id="@+id/edt_ten_dang_nhap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/sp_24"
            android:hint="Tên đăng nhập"
            android:textColor="@color/cl_text_primary"
            android:textSize="@dimen/fs_body"
            android:background="@drawable/bg_edittext"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

        <!-- Ô nhập mật khẩu -->
        <EditText
            android:id="@+id/edt_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/sp_12"
            android:hint="Mật khẩu"
            android:textColor="@color/cl_text_primary"
            android:textSize="@dimen/fs_body"
            android:background="@drawable/bg_edittext"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>


        <!-- Nút Đăng nhập (Outlined) -->
        <Button
            android:id="@+id/btn_dang_nhap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/sp_16"
            android:background="@drawable/bg_btn_outline"
            android:text="Đăng nhập"
            android:textColor="@color/cl_primary"
            android:textSize="@dimen/fs_button"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground" />

        <View
            android:id="@+id/duong_ke_phan_cach"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sp_24"
            android:background="@color/cl_stroke" />

        <!-- Nút Tạo tài khoản (Filled) -->
        <Button
            android:id="@+id/btn_tao_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/sp_12"
            android:background="@drawable/bg_btn_primary"
            android:text="Tạo tài khoản"
            android:textColor="@color/cl_card"
            android:textAllCaps="false"
            android:textSize="@dimen/fs_button"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            app:backgroundTint="@null"/>

        <!-- Huy hiệu phiên bản (trang trí/tuỳ chọn) -->
        <TextView
            android:id="@+id/tv_huy_hieu_phien_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sp_16"
            android:paddingLeft="@dimen/sp_12"
            android:paddingRight="@dimen/sp_12"
            android:paddingTop="@dimen/sp_8"
            android:paddingBottom="@dimen/sp_8"
            android:text="Phiên bản 1.0"
            android:textSize="@dimen/fs_small"
            android:textColor="@color/cl_text_secondary"
            android:background="@drawable/bg_card_welcome"
            app:backgroundTint="@null"/>
    </LinearLayout>

    <!-- Dòng bản quyền dưới cùng (không cuộn, bám đáy) -->
    <TextView
        android:id="@+id/tv_ban_quyen_day_man_hinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="© Bùi Xuân Văn - 22115053122147"
        android:textColor="@color/cl_text_secondary"
        android:textSize="@dimen/fs_small"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sp_8"/>

</androidx.constraintlayout.widget.ConstraintLayout>